*
    margin: 0
    padding: 0

a
    text-decoration: none
    color: #383838

html,body
    height: 100%

.container 
    height: 100%

.column-view
    margin: 0
    padding: 0
    border-right: solid 1px #ccc
    list-style-type: none
    li
        a
            display: block
            padding: 10px 20px 10px 20px
            border-bottom: solid 1px #ccc
            &:hover
                color: blue
        a.selected
            background: #ccc
        a.highlight 
            color: white
            background: #383838

